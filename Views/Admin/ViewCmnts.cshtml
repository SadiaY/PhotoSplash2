@{
    ViewBag.Title = "ViewCmnts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ViewCmnts</h2>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>ViewUsers</title>
</head>
<body>
    <div class="container">
        <h2 align="center" style="font-family:'Buxton Sketch'">Users' Record</h2>
        <table class="table table-striped table-bordered">
            <thead>

                <tr>
                    <th>  Id  </th>
                    <th>  Fname  </th>
                    <th>  Lname</th>
                    <th>  Age</th>
                    <th>  Phone</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.UserID</td>
                        <td>@s.Comment1</td>
                        
                        <td><a href="/Admin/DeleteCmnt/@s.Id">Delete</a></td>

                    </tr>

                }
            </tbody>
        </table>
    </div>

    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>

